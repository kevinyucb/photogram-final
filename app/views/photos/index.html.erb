<div>
  <div>
    <h1>
      List of photos
    </h1>
  </div>
</div>

<div>
  <div>

    <% if current_user != nil %>
      <form action="/insert_photo" method="post" class="form-horizontal" enctype="multipart/form-data">
        <label for="image_box">Image</label>
        <input type="file" id="image_box" name="photo[image]" class="form-control">

        <label for="caption_box">Caption</label>
        <textarea id="caption_box" name="photo[caption]" rows="2" placeholder="Enter a caption for the photo"></textarea>

        <input type="hidden" id="comment_box" name="photo[comments_count]" value="0">
        <input type="hidden" id="likes_box" name="photo[likes_count]" value="0">
        <input type="hidden" id="query_box" name="photo[owner_id]" value="<%= current_user.id %>">

        <button>Add photo</button>
      </form>
      <hr>
    <% end %>
  </div>
</div>

<div>
  <div>
    <table border="1">
      <tr>

        <th>
          Image
        </th>

        <th>
          Caption
        </th>

        <th>
          Owner
        </th>

        <th>
          Posted
        </th>

        <th>
          Likes
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>
      <tr>

        <td>
          <img src="<%= a_photo.image %>" class="img-responsive">
        </td>

        <td>
          <%= a_photo.caption %>
        </td>

        <td>
          <% current_id = a_photo.owner_id %>
          <%= User.find(current_id).username %>
        </td>

        <td>
          <%= time_ago_in_words(a_photo.created_at) %> ago
        </td>

        <td>
          <%= a_photo.likes_count %>
        </td>

        <td>
          <a href="/photos/<%= a_photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
